
<div id="image">
	<% if @path==nil %>
	<table>
		<% for i in 0..@title.length-1  %>
			<tr>
			<td>
			<div>  
			<p><%= @title[i] %></p>         
     		<img src=<%=@pic_url[i] %> style="width:100%;margin-bottom:6px"/><br>
			<%= @description[i] %>
			<div>	
			</td>
			</tr>
		<% end %>
	</table>
	<% else %>
	<table>
		<tr>
		<td>
		<div>
                <% if @pic.title ==nil %>
                <p>无标题</p>
                 <% else %>
		<p><%= @pic.title %></p>
                 <% end %>
     		<img src=<%=SERVER_IMG+@pic.file_path %> style="width:100%;margin-bottom:6px"/><br>
     		<% if @pic.description == nil %>
		无描述
		<% else %>
		<%= @pic.description %>
		<% end %>
		<div>	
		</td>
		</tr>
	</table>
	<% end %>	
</div>
